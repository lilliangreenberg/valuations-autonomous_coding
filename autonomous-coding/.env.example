# Required: Anthropic API Key
ANTHROPIC_API_KEY=

# Optional: Airtable credentials (only if your app spec requires Airtable integration)
AIRTABLE_API_KEY=
AIRTABLE_BASE_ID=
AIRTABLE_ONLINE_PRESENCE_ID:
AIRTABLE_PORTFOLIO_COMPANIES_ID:

# Optional: Firecrawl API Key (only if your app spec requires web scraping)
# FireCrawl
FIRECRAWL_API_KEY=

# Optional retry configuration
FIRECRAWL_RETRY_MAX_ATTEMPTS=5        # Increase max retry attempts
FIRECRAWL_RETRY_INITIAL_DELAY=2000    # Start with 2s delay
FIRECRAWL_RETRY_MAX_DELAY=30000       # Maximum 30s delay
FIRECRAWL_RETRY_BACKOFF_FACTOR=3      # More aggressive backoff

# Optional credit monitoring
FIRECRAWL_CREDIT_WARNING_THRESHOLD=2000    # Warning at 2000 credits
FIRECRAWL_CREDIT_CRITICAL_THRESHOLD=500    # Critical at 500 credits